<Window x:Class="PresentationLogic.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLogic"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="Вход" 
               FontSize="30" 
               HorizontalAlignment="Center"
               FontFamily="Comic Sans MS"
               Margin="0,0,0,40" />

            <TextBox x:Name="Login" 
                     Text="Почта"
                 BorderBrush="Black" 
                 BorderThickness="1" 
                 Width="300" 
                 Height="50" 
                 Margin="0,0,0,20"  
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"
                 FontFamily="Comic Sans MS"
                 FontSize="18"
                 Padding="10,0" />


            <TextBox x:Name="Password" 
                     Text="Пароль"
                 BorderBrush="Black" 
                 BorderThickness="1" 
                 Width="300" 
                 Height="50" 
                 Margin="0,0,0,40" 
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"
                 FontFamily="Comic Sans MS"
                 FontSize="18"
                 Padding="10,0"/>

            <Button 
                Style="{DynamicResource BorderForButton}"
                x:Name="LogInButton" 
                Content="Вход" 
                BorderBrush="Black" 
                BorderThickness="1" 
                Width="150" 
                Height="50" 
                FontSize="24" 
                FontFamily="Comic Sans MS" 
                Background="#76e383"
                Foreground="Black"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Cursor="Hand"  />

            <TextBlock Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   FontFamily="Comic Sans MS"
                   FontSize="16" >
                    Нет аккаунта?
                    <Hyperlink Foreground="#0078D7" Click="SignUp_Click" >
                        Зарегистрироваться
                    </Hyperlink>    
             </TextBlock>
        </StackPanel>
    </Grid>
</Window>
