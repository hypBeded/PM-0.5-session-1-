<Window x:Class="PresentationLogic.Windows.AddEditProbuct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLogic.Windows"
        mc:Ignorable="d"
        Title="AddEditProbuct" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Artikul" 
         Text="Артикул"
         BorderBrush="Black" 
         BorderThickness="1" 
         Margin="10,47,608,357"  
         HorizontalContentAlignment="Left"
         VerticalContentAlignment="Center"
         FontFamily="Comic Sans MS"
         FontSize="18"
         Padding="10,0" />
        <TextBox x:Name="Name" 
            Text="Наименование"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10,95,608,309"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="Price" 
            Text="Стоимость"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10,144,608,260"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="MaxDiscount" 
            Text="Размер максимально возможной скидки"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="218,47,192,357"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="Manufacturer" 
            Text="Производитель"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10,193,608,211"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="Supplier" 
            Text="Поставщик"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10,239,608,165"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="Category" 
            Text="Категория товара"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="218,193,370,211"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="CurrentDiscount" 
            Text="Действующая скидка"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="218,95,370,309"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="StockQuantity" 
            Text="Кол-во на складе"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="218,144,370,260"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            Padding="10,0" />
        <TextBox x:Name="Description" 
            Text="Описание"
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10,285,370,29"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontFamily="Comic Sans MS"
            FontSize="18"
            TextWrapping="Wrap"
            Padding="10,0" />
        <Image HorizontalAlignment="Left" Height="164" Margin="528,95,0,0" VerticalAlignment="Top" Width="164" Source="/Windows/заглушка.jpg"/>
        <Button 
            Style="{DynamicResource BorderForButton}"
            x:Name="SaveButton" 
            Content="Сохранить" 
            BorderBrush="Black" 
            BorderThickness="1" 
            FontSize="24" 
            FontFamily="Comic Sans MS" 
            Background="#76e383"
            Foreground="Black"
            FontWeight="Bold"
            Cursor="Hand"  Margin="535,285,115,99"  />
        <Button 
            Style="{DynamicResource BorderForButton}"
            x:Name="ExitButton" 
            Content="Отменить" 
            BorderBrush="Black" 
            BorderThickness="1" 
            FontSize="24" 
            FontFamily="Comic Sans MS" 
            Background="#498c51"
            Foreground="Black"
            FontWeight="Bold"
            Cursor="Hand"  Margin="535,355,115,29"  />

    </Grid>
</Window>
