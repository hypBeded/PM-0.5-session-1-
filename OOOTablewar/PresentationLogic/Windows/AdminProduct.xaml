<Window x:Class="PresentationLogic.Windows.AdminProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLogic.Windows"
        mc:Ignorable="d"
        Title="Products" Height="600" Width="1000">
    <Window.Resources>
        <!-- Стиль для кнопок сортировки -->
        <Style x:Key="SortButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <!-- Стиль для иконок -->
        <Style x:Key="IconStyle" TargetType="Path">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Fill" Value="#333333"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
        </Style>

        <!-- Стиль для кнопок управления продуктом -->
        <Style x:Key="ProductActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,2,5,2"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель сортировки -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                Padding="10" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сортировка: " 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                <!-- Сортировка по названию -->
                <Button x:Name="SortByNameButton" 
                        Content="По названию" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByNameButton_Click"/>

                <!-- Сортировка по цене -->
                <Button x:Name="SortByPriceButton" 
                        Content="По цене" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByPriceButton_Click"/>

                <!-- Сортировка по количеству -->
                <Button x:Name="SortByQuantityButton" 
                        Content="По количеству" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByQuantityButton_Click"/>

                <!-- Сортировка по производителю -->
                <Button x:Name="SortByManufacturerButton" 
                        Content="По производителю" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByManufacturerButton_Click"/>

                <!-- Сброс сортировки -->
                <Button x:Name="ResetSortButton" 
                        Content="Сбросить сортировку" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="ResetSortButton_Click"/>

                <!-- Индикатор текущей сортировки -->
                <TextBlock x:Name="CurrentSortText" 
                           Text="(без сортировки)" 
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           FontStyle="Italic"/>

                <!-- Разделитель -->
                <Separator Margin="15,0,15,0" 
                           VerticalAlignment="Center"
                           Height="20"/>

                <!-- Иконка корзины и количество -->
                <Button 
        Click="CartButton_Click"
        ToolTip="Корзина"
        Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal" 
                VerticalAlignment="Center">
                        <Path Style="{StaticResource IconStyle}"
              Data="M7,18C8.1,18 9,18.9 9,20C9,21.1 8.1,22 7,22C5.9,22 5,21.1 5,20C5,18.9 5.9,18 7,18ZM17,18C18.1,18 19,18.9 19,20C19,21.1 18.1,22 17,22C15.9,22 15,21.1 15,20C15,18.9 15.9,18 17,18ZM7.2,14.8V14.7L8.1,13H15.5C16.2,13 16.9,12.6 17.2,12L21.1,5L19.4,4L15.5,11H8.5L4.3,2H1V4H3L6.6,11.6L5.2,14C5.1,14.3 5,14.6 5,15C5,16.1 5.9,17 7,17H19V15H7.4C7.3,15 7.2,14.9 7.2,14.8Z"/>
                        <TextBlock Text="{Binding CartItemCount}" 
                   VerticalAlignment="Center"
                   Margin="3,0,0,0"
                   FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <!-- ФИО пользователя -->
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Path Style="{StaticResource IconStyle}"
                          Margin="0,0,5,0"
                          
                          Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          ToolTip="Пользователь"/>
                    <TextBlock x:Name="FIO" 
                               Text="Фамилия Имя Отчество" 
                               VerticalAlignment="Center"
                               FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="TasksListView" 
                      ItemsSource="{Binding Products}"
                      Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <!-- Левая часть: изображение -->
                                <Border Margin="0,0,15,0">
                                    <Image Source="{Binding Image}" 
                                           Width="80" 
                                           Height="80"
                                           Stretch="Uniform"/>
                                </Border>

                                <!-- Центральная часть: информация о товаре -->
                                <StackPanel Width="400" Margin="0,0,20,0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="#666666"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Manufacturer}" 
                                               FontSize="12"
                                               Margin="0,8,0,0"/>
                                </StackPanel>

                                <!-- Правая часть: цена и наличие -->
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" 
                                               FontWeight="Bold" 
                                               FontSize="16"
                                               Foreground="#007ACC"/>

                                    <TextBlock Text="{Binding StockQuantity, StringFormat='На складе: {0} шт.'}" 
                                               FontSize="11" 
                                               Foreground="Gray"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Кнопки управления -->
                                <StackPanel>
                                    <!-- Кнопка добавления в корзину -->
                                    <Button x:Name="AddBasket" 
                                            Content="Добавить в корзину" 
                                            Background="#498c51"
                                            Foreground="White"
                                            Style="{StaticResource SortButtonStyle}"
                                            Click="AddBasket_Click"/>

                                    <!-- Кнопки управления продуктом -->
                                    <Button x:Name="DeleteButton"
                                            Content="Удалить"
                                            Style="{StaticResource ProductActionButtonStyle}"
                                            Background="#d9534f"
                                            Foreground="White"
                                            Click="DeleteButton_Click"/>

                                    <Button x:Name="EditButton"
                                            Content="Изменить"
                                            Style="{StaticResource ProductActionButtonStyle}"
                                            Background="#5bc0de"
                                            Foreground="White"
                                            Click="EditButton_Click"/>

                                    <Button x:Name="AddProductButton"
                                            Content="Добавить"
                                            Style="{StaticResource ProductActionButtonStyle}"
                                            Background="#5cb85c"
                                            Foreground="White"
                                            Click="AddProductButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>