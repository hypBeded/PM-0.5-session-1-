<Window x:Class="PresentationLogic.Windows.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLogic.Windows"
        mc:Ignorable="d"
        Title="Products" Height="600" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" 
    Height="452" Width="330" Background="AliceBlue">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="452" Width="330">
                <ListView x:Name="TasksListView" SelectionChanged="TasksListView_SelectionChanged_1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Левая часть: изображение -->
                                    <Border Margin="0,0,15,0">
                                        <Image Source="{Binding ImagePath}" 
                   Width="80" Height="80"
                   Stretch="Uniform"/>
                                    </Border>

                                    <!-- Центральная часть: информация о товаре -->
                                    <StackPanel Width="250" Margin="0,0,20,0">
                                        <TextBlock Text="{Binding Name}" 
                       FontWeight="Bold" 
                       FontSize="14"
                       TextWrapping="Wrap"/>

                                        <TextBlock Text="{Binding Description}" 
                       FontSize="12" 
                       Foreground="#666666"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>

                                        <TextBlock Text="{Binding Manufacturer, StringFormat='Производитель: {0}'}" 
                       FontSize="12"
                       Margin="0,8,0,0"/>
                                    </StackPanel>

                                    <!-- Правая часть: цена и наличие -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" 
                       FontWeight="Bold" 
                       FontSize="16"
                       Foreground="#007ACC"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Ellipse Width="8" Height="8" 
                         Fill="{Binding StockStatusColor}"
                         VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding StockStatusText}" 
                           FontSize="12"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding StockQuantity, StringFormat='На складе: {0} шт.'}" 
                       FontSize="11" 
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
