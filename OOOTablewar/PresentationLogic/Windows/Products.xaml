<Window x:Class="PresentationLogic.Windows.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLogic.Windows"
        mc:Ignorable="d"
        Title="Products" Height="600" Width="900">
    <Window.Resources>
        <!-- Стиль для кнопок сортировки -->
        <Style x:Key="SortButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель сортировки -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                Padding="10" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сортировка: " 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                <!-- Сортировка по названию -->
                <Button x:Name="SortByNameButton" 
                        Content="По названию" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByNameButton_Click"/>

                <!-- Сортировка по цене -->
                <Button x:Name="SortByPriceButton" 
                        Content="По цене" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByPriceButton_Click"/>

                <!-- Сортировка по количеству -->
                <Button x:Name="SortByQuantityButton" 
                        Content="По количеству" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByQuantityButton_Click"/>

                <!-- Сортировка по производителю -->
                <Button x:Name="SortByManufacturerButton" 
                        Content="По производителю" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="SortByManufacturerButton_Click"/>

                <!-- Сброс сортировки -->
                <Button x:Name="ResetSortButton" 
                        Content="Сбросить сортировку" 
                        Style="{StaticResource SortButtonStyle}"
                        Click="ResetSortButton_Click"/>

                <!-- Индикатор текущей сортировки -->
                <TextBlock x:Name="CurrentSortText" 
                           Text="(без сортировки)" 
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           FontStyle="Italic"/>
                <!-- ФИО -->
                <TextBlock x:Name="FIO" 
           Text="Фамилия Имя Отчество" 
           VerticalAlignment="Center"
           Margin="15,0,0,0"
           FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="TasksListView" 
                      ItemsSource="{Binding Products}"
                      Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <!-- Левая часть: изображение -->
                                <Border Margin="0,0,15,0">
                                    <Image Source="{Binding Image}" 
                                           Width="80" 
                                           Height="80"
                                           Stretch="Uniform"/>
                                </Border>

                                <!-- Центральная часть: информация о товаре -->
                                <StackPanel Width="400" Margin="0,0,20,0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="#666666"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Manufacturer}" 
                                               FontSize="12"
                                               Margin="0,8,0,0"/>
                                </StackPanel>

                                <!-- Правая часть: цена и наличие -->
                                <StackPanel>
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" 
                                               FontWeight="Bold" 
                                               FontSize="16"
                                               Foreground="#007ACC"/>

                                    <TextBlock Text="{Binding StockQuantity, StringFormat='На складе: {0} шт.'}" 
                                               FontSize="11" 
                                               Foreground="Gray"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
